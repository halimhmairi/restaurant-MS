{% extends 'layout/app.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="card">
			<div class="card-header">Article
				<a href="{{ path('create_article') }}" class="btn btn-primary" style="float: right;">
					<i class="fa fa-plus"></i>
				</a>
				<a class="btn btn-primary float-right mr-2" href="{{ path('generate_menu',{'number':5}) }}">Generate 5 records</a>
			</div>
			<div class="card-body">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Description</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for article in articles %}
							<tr>
								<td>{{ article.id }}</td>
								<td>{{ article.name }}</td>
								<td>{{ article.description }}</td>
								<td>
									<a href="" class="btn btn-danger">
										<i class="fa fa-trash"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
