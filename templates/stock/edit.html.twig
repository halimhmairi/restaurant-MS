{% extends 'layout/app.html.twig' %}

{% block title %}
	Edit
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row  pt-5">
			<div class="col-md-6 m-auto">
				<div class="card card-primary">

					<div class="card-header card-header-primary">
						<h1 class="card-title">Edit stock</h1>
					</div>

					<div class="card-body">

						{{ form_start(form) }}
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									{{ form_row(form.name) }}
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									{{ form_row(form.quantity) }}
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									{{ form_row(form.price) }}
								</div>
							</div>

							<div class="col-md-12">
								<div class="form-group">
									{{ form_row(form.description) }}
								</div>
							</div>
						</div>
						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
