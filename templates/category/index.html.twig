{% extends 'layout/app.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<div class="card">
			<div class="card-header">Categorys
				<a href="{{ path('create_category') }}" class="btn btn-primary" style="float: right;">
					<i class="fa fa-plus"></i>
				</a>
			</div>
			<div class="card-body">
				  <table id="example1" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Description</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categorys %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.name }}</td>
								<td>{{ category.description }}</td>
								<td>
									<a href="{{ path('delete_item') }}" class="btn btn-danger">
										<i class="fa fa-trash"></i>
									</a>
									<a href="{{ path('edit_category',{'id':category.id}) }}" class="btn btn-primary">
										<i class="fa fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</div>
			</div>
		</div>
	</div>
</div></div></div>{% endblock %}
