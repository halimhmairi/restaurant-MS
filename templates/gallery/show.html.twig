{% extends 'layout/app.html.twig' %}

{% block title %}Gallery
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row pt-5">
			<div class="col-md-6 m-auto">
				<div class="card card-primary p-4">
					<h1>
						<a class="btn btn-primary" href="{{ path('app_gallery_index') }}">back to list</a>
						Gallery
					</h1>
					<table class="table">
						<tbody>
							<tr>
								<th>Id
								</th>
								<td>{{ gallery.id }}</td>
								<td>
									{% for image in gallery.images %}
										<img width="150px" src="/images/{{ image }}">
									{% endfor %}
								</td>
							</tr>
						</tbody>
					</table>
					<div class="col-md-12">

						{{ include('gallery/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
